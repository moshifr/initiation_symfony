{% extends 'base.html.twig' %}


{% block body_id 'blog_search' %}

{% block main %}
<h1>Recherche </h1>

{{ form(form) }}


    {% for post in posts %}
        <article class="post">
            <h2>
                <a href="{{ path('blog_post', { slug: post.slug }) }}">
                    {{ post.title }}
                </a>
            </h2>

            {{ post.summary|md2html }}
        </article>
    {% endfor %}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
